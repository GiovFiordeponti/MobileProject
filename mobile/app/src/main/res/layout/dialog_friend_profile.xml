<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_2"
    android:orientation="vertical">

    <include
        layout="@layout/dialog_main_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/picture_dimension"
            app:civ_border_color="@color/black"
            app:civ_border_width="@dimen/picture_width" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_profile_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/rye"
            android:gravity="center"
            android:text=""
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/textView"
            android:textSize="@dimen/title" />

        <TextView
            android:id="@+id/text_profile_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/asap_medium_italic"
            android:text=""
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/textView" />

        <TextView
            android:id="@+id/text_money"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/asap_medium_italic"
            android:gravity="center"
            android:text=""
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/textView" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/layout_friend_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_friend_code"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/asap_medium_italic"
            android:text="Friend Code"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/black"
            android:textSize="@dimen/subtitle"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_friend_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="3dp"
            android:fontFamily="@font/asap_medium_italic"
            android:text="1234 4566 6546"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/textView"
            android:textSize="20sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/statistic"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="1dp"
        android:fontFamily="@font/asap_medium_italic"
        android:text="@string/statistics"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/black"
        android:textSize="@dimen/subtitle"
        android:textStyle="bold"
        android:translationY="50dp" />

    <LinearLayout
        android:id="@+id/layout_stat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/profile_offset_y"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/win_label"
            android:layout_width="@dimen/layout_width_1"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/rye"
            android:text="@string/wins"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/lose_label"
            android:layout_width="158dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/rye"
            android:text="@string/loses"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_numb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:accessibilityLiveRegion="polite"
        android:alwaysDrawnWithCache="false"
        android:nestedScrollingEnabled="true"
        android:orientation="horizontal"
        android:translationY="-50dp">

        <TextView
            android:id="@+id/win_numbers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/rye"
            android:textAlignment="center"
            android:textColor="@color/loseColor"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lose_numbers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/rye"
            android:textAlignment="center"
            android:textColor="@color/textView"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>



    <include
        layout="@layout/dialog_main_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />


    </LinearLayout>

