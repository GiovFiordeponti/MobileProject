<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/leader_board"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/text_player_rank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/asap_medium_italic"
            android:text="1."
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_stat" />
        <TextView
            android:id="@+id/text_player_stats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/asap_medium_italic"
            android:paddingBottom="@dimen/player_padding"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_stat" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_score"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="50dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_win_stats"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/asap_medium_italic"
            android:textAlignment="viewEnd"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_stat" />

    </LinearLayout>

</LinearLayout>
