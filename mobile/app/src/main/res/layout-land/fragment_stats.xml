<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_label"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.StatsFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:id="@+id/layout_stat"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_stat_h"
        android:layout_marginHorizontal="@dimen/profile_offset_x"
        android:layout_marginVertical="@dimen/profile_offset_y"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/win_label"
            android:layout_width="@dimen/layout_width_1"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/rye"
            android:text="@string/wins"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/title" />

        <TextView
            android:id="@+id/lose_label"
            android:layout_width="158dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/rye"
            android:text="@string/loses"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/title" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_numb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/profile_offset_x"
        android:layout_marginVertical="@dimen/layout_num_margin_v"
        android:accessibilityLiveRegion="polite"
        android:alwaysDrawnWithCache="false"
        android:gravity="bottom"
        android:nestedScrollingEnabled="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/win_numbers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/rye"
            android:textAlignment="center"
            android:text=""
            android:textColor="@color/loseColor"
            android:textSize="@dimen/title"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lose_numbers"
            android:layout_width="@dimen/textView_w"
            android:text=""
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/rye"
            android:textAlignment="center"
            android:textColor="@color/textView"
            android:textSize="@dimen/title"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/leader_board"
        android:layout_width="346dp"
        android:layout_height="200dp"
        android:layout_marginHorizontal="@dimen/profile_offset_x"
        android:layout_marginVertical="@dimen/margin_leaderboard_ver"
        android:baselineAligned="false"
        android:orientation="vertical">

        <TextView
            android:id="@+id/leader_board_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|end"
            android:fontFamily="@font/asap_medium_italic"
            android:paddingBottom="@dimen/player_padding"
            android:text="@string/leader_boarder"
            android:textColor="@color/textView"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/player_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/asap_medium_italic"
            android:paddingBottom="@dimen/player_padding"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_stat" />

        <TextView
            android:id="@+id/player_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/asap_medium_italic"
            android:paddingBottom="@dimen/player_padding"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_stat" />

        <TextView
            android:id="@+id/player_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/asap_medium_italic"
            android:paddingBottom="@dimen/player_padding"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_stat" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_score"
        android:layout_width="563dp"
        android:layout_height="200dp"
        android:layout_marginHorizontal="@dimen/profile_offset_x"
        android:layout_marginVertical="@dimen/margin_leaderboard_ver"
        android:orientation="vertical">

        <TextView
            android:id="@+id/score_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:fontFamily="@font/asap_medium_italic"
            android:paddingTop="@dimen/profile_offset_x"
            android:textAlignment="viewEnd"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_stat" />

        <TextView
            android:id="@+id/score_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:fontFamily="@font/asap_medium_italic"
            android:paddingTop="@dimen/player_padding"
            android:textAlignment="viewEnd"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_stat" />

        <TextView
            android:id="@+id/score_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:fontFamily="@font/asap_medium_italic"
            android:paddingTop="@dimen/player_padding"
            android:textAlignment="viewEnd"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_stat" />
    </LinearLayout>


</FrameLayout>